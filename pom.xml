		<groupId>javax.servlet</groupId>
		<artifactId>jstl</artifactId>  
		<version>1.2</version>
	</dependency>
	
<!-- 	hibernate core -->
	<dependency>
	    <groupId>org.hibernate</groupId>
	    <artifactId>hibernate-core</artifactId>
	    <version>5.4.8.Final</version>
   </dependency>
   	
<!--    	to use spring and hibernate together	 -->
